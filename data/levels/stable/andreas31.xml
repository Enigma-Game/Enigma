dirmessage[6] = "move_sse"
dirmessage[7] = "move_ees"
dirmessage[8] = "move_een"

function trigger_call()
  msg = dirmessage[random(1,8)]
  SendMessage(enigma.GetNamedObject("chess"..tostring(random(1,chess_number))), msg)
end

