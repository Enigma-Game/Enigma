function set_grad(x, y, gx, gy)
  set_floor(myfloor[random(1,6)], x, y,
    {force_x = gx * 30 + random(-5, 5), force_y = gy * 30 + random(-5, 5)})
end

function set_blackball(x,y)
  set_actor("ac-blackball", x + 0.5, y + 0.5, {mouseforce = 2.0, player = 0})
