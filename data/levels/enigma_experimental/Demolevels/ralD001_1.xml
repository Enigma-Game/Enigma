ti["r"] = {"fl-rough-red"}
ti["b"] = {"fl-rough-blue"}
ti["1"] = {"#ac-blackball"}

ti["x"] = {"it_cross"}

function myresolver(key, x, y)
    if key == " " then
        local center = ((x%3) * (y%3))%2 
        local checker = ((math.modf(x/3) %2) + (math.modf(y/3) %2))%2
        if center + checker == 1 then
            return ti["r"]
        else
            return ti["b"]
        end
    else
        return ti[key]
    end
end

