ti["#"] = {"st_granite"}
ti["o"] = {"it_meditation_hollow"}
ti["@"] = {"it_magnet", state=ON} .. ti({"#ac_pearl", essential=INDISPENSABLE})

maze = res.maze(ti, {area={"~"}, render={"-", "~", "-"}})

map = wo:newMap(" ", {
    "####################",
    "#   ~~~~~~~~~~~~~  #",
    "# @ ~~~~~~~~~~~~~ o#",
