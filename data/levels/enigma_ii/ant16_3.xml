    "#   ~~~~~~~~~~~~~  #",
    "#   ~~~~~~~~~~~~~  #",
    "# @ ~~~~~~~~~~~~~ o#",
    "#   ~~~~~~~~~~~~~  #",
    "####################"})

-- prohibit straight west-east paths
columns = lib.lua.shuffle({5,7,9,11,13,15})
for i=1,6 do
    map[{columns[i], 2*i - 1}] = "="
end

wo(maze, map)
